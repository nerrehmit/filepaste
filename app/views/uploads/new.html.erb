<h1>New upload</h1>

<% form_for :uploads, :url => { :action => 'create' }, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label 'Path to File' %><br />
    <%= f.file_field 'file' %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

